<h2>Listagem de Produtos</h2>

<div>
    <a href="~/Produtos/Add">Novo Produto</a>
</div>

<table border="1">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Tipo</th>
            <th>Qtde</th>
            <th>Data do Cadastro</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>@produto.Tipo</td>
                <td>@produto.Qtde</td>
                <td>@produto.DataCadastro</td>
                <td>
                    <a href="~/Produtos/Edit/@produto.Id">Editar</a>
                    <a href="javascript:void(0)" onclick="alert('Excluir Produto')">Excluir</a>
                </td>
            </tr>
        }


    </tbody>
</table>
